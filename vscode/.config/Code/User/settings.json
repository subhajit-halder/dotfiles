{
  "editor.fontFamily": "'FantasqueSansMono Nerd Font'",
  "editor.fontLigatures": true,
  "window.zoomLevel": 2,
  // "terminal.integrated.fontFamily": "'FantasqueSansMono Nerd Font'",
  "terminal.integrated.fontFamily": "'Iosevka Term'",
  "debug.console.fontSize": 16,
  "markdown.preview.fontSize": 16,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "editor.fontSize": 18,
  "terminal.integrated.fontSize": 18,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "go.addTags": {
    "promptForTags": true
  },
  "vim.useSystemClipboard": true,
  "gruvboxMaterial.italicKeywords": true,
  "markdown.preview.fontFamily": "'karla',-apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
  "editor.cursorStyle": "underline",
  "workbench.welcomePage.preferReducedMotion": true,
  "terminal.external.linuxExec": "kitty",
  "explorer.confirmDelete": false,
  "editor.wordWrap": "off",
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "liveServer.settings.CustomBrowser": "chrome",
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.dragAndDrop": false,
  "window.restoreWindows": "none",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "window.menuBarVisibility": "toggle",
  "workbench.colorTheme": "Gruvbox Material Dark",
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "gruvboxMaterial.darkContrast": "hard",
  "gruvboxMaterial.darkPalette": "mix"
}
